<br>
<h2><%= @company.name %> </h2>
<%=link_to("edit", edit_company_path(@company.id)) %> 
<%=link_to("back", companies_path) %> 
<hr>
<div class="row">
  <div class="col-md-6">
    <b>Street:</b> <%= @company.street %> <br>
    <b>City: </b><%= @company.city %> <br>
    <b>Country: </b><%= @company.country %> <br>
    <b>Contact number: </b><%= @company.contact_number %> <br>

  </div>
  <div class="col-md-6">
    <b>Rfc: </b><%= @company.rfc %> <br>
    <b>Neighborhood: </b><%= @company.neighborhood %> <br>
    <b>Zipcode: </b><%= @company.zipcode %> <br>
    <b>Contact: </b><%= @company.contact %> <br>
  </div> <br>
 
</div>
<br>


<hr>
<br>
<h3>Clients:</h3>
<br>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Contact</th>
      <th>Contact Number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @company.clients.each do |c| %>
    <tr>
      <td><%= c.id  %></td>
      <td><%= link_to(c.name, client_path(c.id) ) %></td>
      <td><%= c.phone %></td>
      <td><%= c.contact %></td>
      <td><%= c.contact_number %></td>
    </tr>
<% end %>
  </tbody>
</table>
<%= form_for @company do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %><br>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.text_field :rfc, placeholder: "RFC", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :street, placeholder: "Street", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :neighborhood, placeholder: "Neighborhood", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :city, placeholder: "City", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :zipcode, placeholder: "Zipcode", class: "form-control" %><br>
      </div>
    </div> <!-- Col 1 end -->
    <div class="col-md-5">
      <div class="form-group">
        <%= f.text_field :country, placeholder: "Country", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :phone, placeholder: "Phone", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :contact, placeholder: "Contact", class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.text_field :contact_number, placeholder: "Contact number", class: "form-control" %><br>
      </div>
    </div>  <!-- Col 2 end -->
  </div>
  <%= f.submit "Submit", :class => "btn btn-primary" %>

<%end%>

 



<h3>Projects:</h3>

<hr>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Contact</th>
      <th>Contact Number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @client.projects.each do |project| %>
    <tr>
      <td><%= project.id  %></td>
      <td><%= link_to(project.name, client_project_path(@client.id,project.id) ) %></td>
      <td><%= project.contact %></td>
      <td><%= project.contact_number %></td>
      <td><%=link_to("edit", edit_client_path(project.id)) %> <%=link_to("delete", client_path(project.id), method: "DELETE", data: {confirm: "Are you sure?"}) %></td>
    </tr>
<% end %>
  </tbody>
</table>
